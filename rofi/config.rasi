#wallpapers window { width: 90%; }

#wallpapers listview {
  columns: 4;
  lines: 3;
  fixed-columns: true;
  fixed-height: true;
  dynamic: false;
  flow: horizontal;
  layout: vertical;
}

#wallpapers element {
  orientation: vertical;
  children: [ element-icon, element-text ];
}

#wallpapers element-icon { size: 96px; }
