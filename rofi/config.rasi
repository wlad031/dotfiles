configuration {
  modi: "combi,drun,run,emoji,calc,copyq,wallpapers";
  modes: [ combi,calc,emoji,copyq ];
  combi-modes: [ drun, run ];

  show-icons: true;
  sidebar-mode: true;

  // kb-mode-next: "Tab";
  // kb-mode-previous: "Shift+Tab";
}

@theme "gruvbox-dark"

