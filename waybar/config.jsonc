[
  {
    "layer": "top",
    "position": "top",
    "height": 34,
    "spacing": 8,

    "margin-top": 6,
    "margin-right": 8,
    "margin-bottom": 0,
    "margin-left": 8,

    "modules-left": [
      "hyprland/workspaces",
      "wlr/taskbar",
      "hyprland/mode"
    ],

    "modules-center": [
      "mpris"
    ],

    "modules-right": [
      "tray",
      "cpu",
      "memory",
      "custom/hyprsunset",
      "network",
      "bluetooth",
      "pulseaudio",
      "clock",
      "hyprland/language",
      "custom/notification"
    ],

    "hyprland/workspaces": {
      "disable-scroll": true,
      "tooltip": false,
      "format": "{icon} {id}",
      "format-icons": {
        "active": "ÓÆ¥",
        "default": "ÓÆµ"
      },
      "persistent-workspaces": {
        "*": 5
      }
    },

    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 16,
      "tooltip": true,
      "tooltip-format": "{name}",
      "on-click": "activate",
      "icon-theme": "Numix-Circle"
    },

    "mpris": {
      "format": "{player_icon} {artist} {title}",
      "format-paused": "‚è∏ {artist} {title}",
      "max-length": 60,
      "enable-tooltip-len-limits": true,
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ"
      },
      "status-icons": {
        "paused": "‚è∏"
      }
    },

    "tray": {
      "spacing": 10,
      "tooltip": false
    },

    "clock": {
      "format": "{:%H:%M}",
      "format-alt": "{:%a, %d %b  %H:%M}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "hyprland/language": {
      "format": "{short}",
      "on-click": "hyprctl switchxkblayout all next"
    },

    "custom/hyprsunset": {
      "tooltip": false,
      "format": "Óçç {text}",
      "return-type": "text",
      "exec-if": "which hyprsunset",
      "exec": "hyprctl hyprsunset temperature",
      "restart-interval": 1,
      "on-click": "hyprctl hyprsunset temperature 6000",
      "on-scroll-up": "hyprctl hyprsunset temperature +500",
      "on-scroll-down": "hyprctl hyprsunset temperature -500",
      "escape": true
    },

    "custom/notification": {
      "tooltip": false,
      "format": "{icon}",
      "format-icons": {
        "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
        "none": "ÔÇ¢",
        "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
        "dnd-none": "Ôá∑",
        "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
        "inhibited-none": "ÔÇ¢",
        "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
        "dnd-inhibited-none": "Ôá∑"
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
    },

    "bluetooth": {
      "on-click": "blueman-manager",
      "format": "Ôäî {status}",
      "format-connected": "Ôäî {device_alias}",
      "format-connected-battery": "Ôäî {device_alias} {device_battery_percentage}%",
      "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },

    "network": {
      "format-wifi": "Ôá´ {signalStrength}%",
      "format-ethernet": "Û∞ñà {ipaddr}",
      "format-disconnected": "Û∞åô",
      "on-click": "nmrs",
      "interval": 5,
      "tooltip": true,
      "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
      "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
      "tooltip-format-ethernet": "{ifname} ÔÉÅ",
      "tooltip-format-disconnected": "Disconnected"
    },

    "cpu": {
      "format": "Ôíº {usage:>2}%",
      "justify": "center",
      "interval": 2,
      "on-click": "ghostty --title='htop-floating' --window-height=80 --window-width=150 -e htop"
    },

    "memory": {
      "format": "ÓøÖ {percentage:>2}%",
      "justify": "center",
      "interval": 2,
      "on-click": "ghostty --title='htop-floating' --window-height=30 --window-width=120 -e htop"
    },

    "pulseaudio": {
      "scroll-step": 5,
      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "Ôäî {icon} {volume}% {format_source}",
      "format-bluetooth-muted": "Ôö© Ôäî {icon} {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-muted": "Óª®",
      "format-icons": {
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-click": "ghostty --title='htop-floating' --window-height=80 --window-width=150 -e pulsemixer",
      "on-click-right": "pavucontrol --tab 3"
    }
  }
]

