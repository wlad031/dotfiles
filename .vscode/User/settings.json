{
    "files.watcherExclude": {
      "**/target": true,
      "**/.trunk/*out": true,
      "**/.bloop": true,
      "**/.metals": true,
      "**/.ammonite": true
    },
    "files.exclude": {
      "**/.trunk/*out": true
    },

    "editor.fontFamily": "Hack Nerd Font, Inconsolata, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 15,

    "[Log]": {
      "editor.fontFamily": "Inconsolata, Hack Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
      "editor.fontSize": 11
    },
    "explorer.openEditors.visible": 5,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
    },
    "explorer.confirmDelete": false,
    "workbench.preferredLightColorTheme": "Gruvbox Light Hard",
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
    "workbench.tree.indent": 8,
    "workbench.colorCustomizations": {
      "tree.indentGuidesStroke": "#00ff00"
    },
    
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.lineHeight": 1.3,
    "editor.detectIndentation": false,
    "editor.rulers": [ 80, 100, 120 ],

    "better-comments.tags": [
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fixme",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    "trunk.trunkGrayOutNonBlockingIssues": false,
    "window.autoDetectColorScheme": true,
    "window.restoreWindows": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "diffEditor.ignoreTrimWhitespace": false,
   
    "gitlens.mode.active": "zen",
    "git.allowForcePush": true,
    "workbench.iconTheme": "catppuccin-mocha",
    "simpleIcons.hideArrows": false,
    "python.autoComplete.extraPaths": [
      "/Users/vgerasimov/.vscode-oss/extensions/continue.continue-0.6.5-darwin-arm64",
      "/Users/vgerasimov/.vscode-oss/extensions/continue.continue-0.6.7-darwin-arm64",
      "/Users/vgerasimov/.vscode-oss/extensions/continue.continue-0.6.10-darwin-arm64",
      "/Users/vgerasimov/.vscode-oss/extensions/continue.continue-0.6.15-darwin-arm64"
    ],
    "git.confirmSync": false,
    "github.copilot.enable": {
      "*": true,
      "plaintext": false,
      "markdown": false,
      "scminput": false
    },
    "window.zoomLevel": -1,

    "[scala]": {
      "editor.defaultFormatter": "scalameta.metals",
      "editor.rulers": [ 100 ],
    },
    "metals.serverVersion": "1.2.2",

    "[dart]": {
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.rulers": [ 80 ],
      "editor.selectionHighlight": false,
      "editor.suggest.snippetsPreventQuickSuggestions": false,
      "editor.suggestSelection": "first",
      "editor.tabCompletion": "onlySnippets",
      "editor.wordBasedSuggestions": "off"
    },
    "explorer.openEditors.minVisible": 5,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.showTabs": "single",
    "redhat.telemetry.enabled": false,
    "editor.accessibilitySupport": "off",
    "workbench.colorTheme": "Gruvbox Dark Hard",
}
